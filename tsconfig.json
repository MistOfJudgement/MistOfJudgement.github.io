{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./",
        "noImplicitAny": true
    },

    "include": [
        "src/**/*",
        "test/**/*",
        "eslint.config.mts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}